<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<div>
<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-outline-primary mt-4" %>
</div>
