<h2>Add a new restaurant</h2>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, collection: Restaurant::CATEGORIES%>
  <hr>
  <%= f.submit class:"btn btn-dark" %>
<% end %>

<div>
<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-outline-primary mt-4" %>
</div>
